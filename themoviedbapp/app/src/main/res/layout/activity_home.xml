<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="@id/navigationView"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView
            android:id="@+id/homeListA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lastPage="@integer/home_list_last_page"
            app:pageSize="@integer/home_list_page_count"
            app:titleText="Test">

        </br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView>

        <br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView
            android:id="@+id/homeListB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lastPage="@integer/home_list_last_page"
            app:pageSize="@integer/home_list_page_count"
            app:titleText="Test">

        </br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView>

        <br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView
            android:id="@+id/homeListC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lastPage="@integer/home_list_last_page"
            app:pageSize="@integer/home_list_page_count"
            app:titleText="Test">

        </br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView>

        <br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView
            android:id="@+id/homeListD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lastPage="@integer/home_list_last_page"
            app:pageSize="@integer/home_list_page_count"
            app:titleText="Test">

        </br.com.nerdrapido.themoviedbapp.ui.components.horizontalmovielist.HorizontalMovieListView>

    </LinearLayout>

</ScrollView>